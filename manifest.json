{
	"manifest_version": 3,
	"name": "Browser Remote Operations Protocol",
	"version": "2.6.0",
	"description": "Chrome extension with multiplexed BROP/CDP protocol support for advanced browser automation",
	"permissions": [
		"tabs",
		"storage",
		"scripting",
		"debugger",
		"alarms"
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "main_background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"injected.js",
				"readability.js",
				"turndown.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "BROP - Browser Remote Operations",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	}
}