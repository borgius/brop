{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			"build/**",
			"*.min.js",
			"readability.js",
			"turndown.js",
			".mastra/**",
			"brop-agent/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "error"
			},
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	}
}
